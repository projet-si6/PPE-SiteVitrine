{% extends 'base.html.twig' %}
{% block title %}RoroLaBrocante - {{ controller_name }}{% endblock %}
{% block body %}

<div class="super_container">

	<div class="super_container_inner">
		<div class="super_overlay"></div>
        <div class="products">

           

            <div class="container simple">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box tete-box">
                                <h3 class="tete-text">Information sur la Livraison</h3>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="box">
                            <div class="field">
                                {{ form_start(form, {'method': 'post', 'action': path('livraison'), 'attr': {'class': 'ui form'}}) }}
                                {{ form_widget(form) }}
                            </div>

                            <div class="ui checkbox">
                            </div>
                            <div> 
                                <input class="ui button" type="submit" id="_submit" value="Envoyer" />
                            </div>
                            
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

{% endblock %}