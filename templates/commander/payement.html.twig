{% extends 'base.html.twig' %}
{% block title %}RoroLaBrocante -  {{ controller_name }}{% endblock %}
{% block body %}

<div class="super_container">

	<div class="super_container_inner">
		<div class="super_overlay"></div>
        <div class="products">

           <div class="html ui top attached segment">
                <div class="ui four top attached steps">
                    <div class="completed step">
                        <i class="user icon"></i>
                        <div class="content">
                        <div class="title">Information</div>
                        <div class="description">Vos informations personnelles</div>
                    </div>
                    </div><div class="completed step">
                        <i class="truck icon"></i>
                        <div class="content">
                        <div class="title">Livraison</div>
                        <div class="description">Information sur la Livraision</div>
                        </div>
                    </div>
                    <div class="active step">
                        <i class="payment icon"></i>
                        <div class="content">
                        <div class="title">Paiement</div>
                        <div class="description">Votre méthode de paiement</div>
                        </div>
                    </div>
                    <div class="disabled step">
                        <i class="info icon"></i>
                        <div class="content">
                        <div class="title">Confirmation</div>
                        <div class="description">Vérifiez vos détails</div>
                         </div>
                    </div>
                </div>
            </div>

            <div class="container simple">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box tete-box">
                                <h3 class="tete-text">Mode de Paiement</h3>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="box">
                            <div class="ui segment" style="margin-bottom: 10px">
                                <div class="ui form">
                                    <div class="grouped fields">
                                        {% for payment in modePayment %}
                                        <div class="field">
                                            <a href="{{ path('payement', {"choice": payment.id}) }}">
                                                <div class="ui selectMode">
                                                    <img style="margin-left: 30%; margin-right: 30%; margin-bottom: 10%;margin-top: 10%" src="{{ payment.image }}" alt="" width="40%" height="40%"/>
                                                </div>
                                            </a>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

{% endblock %}