{% extends 'base.html.twig' %}
{% block title %}RoroLaBrocante -  {{ controller_name }}{% endblock %}
{% block body %}

<div class="super_container">

	<div class="super_container_inner">
		<div class="super_overlay"></div>
        <div class="products">

           

            <div class="container simple">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box tete-box">
                                <h3 class="tete-text">Mode de Paiement</h3>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="box">
                            <div class="ui segment" style="margin-bottom: 10px">
                                <div class="ui form">
                                    <div class="grouped fields">
                                        {% for payment in modePayment %}
                                        <div class="field">
                                            <a href="{{ path('payement', {"choice": payment.id}) }}">
                                                <div class="ui selectMode">
                                                    <img style="margin-left: 30%; margin-right: 30%; margin-bottom: 10%;margin-top: 10%" src="{{ payment.image }}" alt="" width="40%" height="40%"/>
                                                </div>
                                            </a>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

{% endblock %}